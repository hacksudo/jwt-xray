{
  "manifest_version": 2,
  "name": "Hacksudo JWT X-Ray",
  "version": "1.1.0",
  "description": "JWT decode, risk analysis, history, compare, builder (edit+encode+HMAC sign), and safe rule-based request modifiers for authorized testing.",
  "homepage_url": "https://hacksudo.com",
  "author": "Vishal Waghmare (hacksudo.com)",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "sidebar_action": {
    "default_title": "Hacksudo JWT X-Ray",
    "default_panel": "sidebar/sidebar.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon.svg"
  }
}
